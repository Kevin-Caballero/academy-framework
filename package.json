{
  "name": "my-framework",
  "version": "1.0.0",
  "description": "Framework modular con servicios como submódulos Git",
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "check:node": "node scripts/check-node-version.js",
    "start": "node scripts/start-services.js",
    "services:install": "node scripts/install-services.js",
    "services:build": "node scripts/build-services.js",
    "pull": "node scripts/pull-services.js",
    "db:up": "docker-compose -f database/docker-compose.yml up -d && sleep 5 && node scripts/run-migrations.js --auto",
    "db:down": "docker-compose -f database/docker-compose.yml down",
    "db:logs": "docker-compose -f database/docker-compose.yml logs -f",
    "db:reset": "docker-compose -f database/docker-compose.yml down -v && docker-compose -f database/docker-compose.yml up -d && sleep 5 && node scripts/run-migrations.js --auto",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "db:migrate": "node scripts/run-migrations.js",
    "init": "node scripts/init-framework.js"
  },
  "keywords": ["framework", "modular", "services"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "inquirer": "^9.2.7",
    "chalk": "^5.3.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
  },
  "services": {
    "backend": {
      "repository": "https://github.com/Kevin-Caballero/academy-backend.git",
      "branch": "main",
      "description": "Backend API con NestJS y TypeScript"
    },
    "admin": {
      "repository": "https://github.com/Kevin-Caballero/academy-admin.git",
      "branch": "main",
      "description": "Panel de administración"
    },
    "client": {
      "repository": "https://github.com/Kevin-Caballero/academy-client.git",
      "branch": "main",
      "description": "Cliente público"
    }
  }
} 